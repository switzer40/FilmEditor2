<Window x:Class="FilmEditor2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilmEditor2"
        mc:Ignorable="d"
        FontWeight="Bold"
        FontFamily="Times New Roman"
        FontSize="18"
         BorderBrush="Navy"
         BorderThickness="4"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <WrapPanel Orientation="Horizontal">
            <Button Content="Exit" Click="Close"/>
            <Button Content="Films" Click="FilmPanel"/>
            <Button Content="People" Click="PersonPanel"/>
            <Button Content="Countries" Click="CountryPanel"/>
            <Button Content="Locations" Click="LocationPanel"/>
        </WrapPanel>
    </Grid>
</Window>
